@{
    ViewData["Title"] = "Home";
}
@model EBook_Proj.Models.HomePageBooksViewModel




<!-- Featured Books -->
@{
    ViewData["CarouselId"] = "featuredBooksCarousel";
    ViewData["SectionTitle"] = "Featured Books";
    ViewData["ItemsPerSlide"] = 4;
}
@await Html.PartialAsync("_BooksCarousel", Model.FeaturedBooks)

<!-- Popular Books -->
@{
    ViewData["CarouselId"] = "popularBooksCarousel";
    ViewData["SectionTitle"] = "Most Popular";
    ViewData["ItemsPerSlide"] = 3;
    //ViewData["SectionClass"] = "bg-light py-5";
}
@await Html.PartialAsync("_BooksCarousel", Model.PopularBooks)

<!-- Book Details Modal -->
<div class="modal fade" id="bookDetailsModal" tabindex="-1" aria-labelledby="bookDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="modal-book-cover-container">
                                <img id="modalBookCover" src="" alt="Book Cover" class="modal-book-image">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2 id="modalBookTitle" class="mb-3"></h2>
                            <h5 id="modalBookAuthor" class="text-muted mb-4"></h5>

                            <div class="book-details mb-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Genre:</strong> <span id="modalBookGenre"></span></p>
                                        <p><strong>Publication Date:</strong> <span id="modalBookDate"></span></p>
                                    </div>
                                </div>
                            </div>

                            <div class="description mb-4">
                                <h5>Description</h5>
                                <p id="modalBookDescription" class="text-muted"></p>
                            </div>

                            <div class="pricing">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="price-box p-3 bg-light rounded text-center">
                                            <h6>Buy</h6>
                                            <h4 id="modalBookBuyPrice" class="text-primary"></h4>
                                            <button class="btn btn-primary">Add to Cart</button>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="price-box p-3 bg-light rounded text-center">
                                            <h6>Borrow</h6>
                                            <h4 id="modalBookBorrowPrice" class="text-success"></h4>
                                            <button class="btn btn-success">Borrow Now</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feedback Section -->
<section class="container py-5">
    <h2 class="section-title">What Our Readers Say</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="feedback-card">
                <div class="rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p class="feedback-text">"Amazing selection of books! The interface is so easy to use and the delivery was super quick."</p>
                <p class="feedback-author">- Sapir Shenkor</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="feedback-card">
                <div class="rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p class="feedback-text">"The best digital library I've ever used. Great prices and excellent customer service!"</p>
                <p class="feedback-author">- Liran Hozias</p>
            </div>
        </div>
    </div>
</section>