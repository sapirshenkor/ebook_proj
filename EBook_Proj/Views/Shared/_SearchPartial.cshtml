@model EBook_Proj.Models.HomePageBooksViewModel

<div class="bg-light py-5">
    <div class="container">
        <!-- Search Bar and Genre Section -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text"
                           name="searchString"
                           id="searchString"
                           class="form-control form-control-lg"
                           placeholder="Search for books..."
                           value="@Model.SearchString"
                           autocomplete="off">
                    <select name="genre"
                            id="genre"
                            class="form-select form-select-lg"
                            style="max-width: 200px;">
                        <option value="">All Genres</option>
                        @foreach (var genre in Model.Genres)
                        {
                            if (genre == Model.SelectedGenre)
                            {
                                <option value="@genre" selected>@genre</option>
                            }
                            else
                            {
                                <option value="@genre">@genre</option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="row g-3">
                    <!-- Author Filter -->
                    <div class="col-md-3">
                        <label class="form-label">Author</label>
                        <select id="author" class="form-select">
                            <option value="">All Authors</option>
                            @foreach (var author in Model.Authors)
                            {
                                if (author == Model.SelectedAuthor)
                                {
                                    <option value="@author" selected>@author</option>
                                }
                                else
                                {
                                    <option value="@author">@author</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Filter By</label>
                        <select class="form-select" id="options">
                            <option value="">Filter By</option>
                            <option value="OnSale">On Sale</option>
                            <option value="ForBorrow">For Borrow</option>
                            <option value="ForBuying">For Buying</option>
                        </select>
                    </div>

                    <!-- Sort Options -->
                    <div class="col-md-2">
                        <label class="form-label">Sort By</label>
                        <select class="form-select" id="sortOption">
                            <option value="">Sort By</option>
                            <option value="popular">Most Popular</option>
                        </select>
                    </div>

                    <!-- Price Sort -->
                    <div class="col-md-2">
                        <label class="form-label">Price Sort</label>
                        <select class="form-select" id="priceSort">
                            <option value="">Sort by Price</option>
                            <option value="asc">Low to High</option>
                            <option value="desc">High to Low</option>
                        </select>
                    </div>

                    <!-- Year Sort -->
                    <div class="col-md-2">
                        <label class="form-label">Year</label>
                        <select class="form-select" id="yearSort">
                            <option value="">Sort by Year</option>
                            <option value="asc">Oldest First</option>
                            <option value="desc">Newest First</option>
                        </select>
                    </div>

                    <!-- Price Range -->
                    <div class="col-md-3">
                        <label class="form-label">Price Range</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="minPrice" placeholder="Min $">
                            <input type="number" class="form-control" id="maxPrice" placeholder="Max $">
                        </div>
                    </div>
                </div>

                <!-- Reset Button -->
                <div class="row mt-3">
                    <div class="col-md-2 ms-auto">
                        <button class="btn btn-outline-secondary w-100" id="resetFilters">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
