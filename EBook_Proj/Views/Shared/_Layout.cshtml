<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - EBook_Proj</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/EBook_Proj.styles.css" asp-append-version="true"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/UserPage.css" asp-append-version="true"/>
</head>
<body>
<div data-user-id="@Context.Session.GetString("CustomerID")"></div>
<div class="content-wrapper">
    <header>
        @await Html.PartialAsync("_NavbarPartial")
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()

        </main>
    </div>
</div>

<footer class="footer text-muted py-2 bg-light mt-auto border-top">
    <div class="container">
        <div class="row align-items-center" style="font-size: 0.9rem;">
            <div class="col-md-6">
                &copy; 2024 - EBook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div class="col-md-6 text-end">
                <a href="#" class="text-decoration-none me-3 text-muted"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-decoration-none me-3 text-muted"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-decoration-none text-muted"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/CartService.js"></script>
<script>
    
    document.addEventListener('DOMContentLoaded', () => {
        cartService.updateCartCount();

    });
</script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>