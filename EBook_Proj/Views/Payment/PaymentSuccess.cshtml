<div class="confirmation-container">
    <div class="confirmation-card">
        <div class="success-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>

        <h1 class="thank-you-title">Thank You @(Context.Session.GetString("FirstName")) !</h1>
        <p class="purchase-message">Your eBook purchase was successful</p>

        <div class="order-details">
            <h3>Order Details</h3>
            <p>Total Amount: $@ViewBag.CartTotal</p>
            <p>Order Date: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        <p class="instruction-message">You will receive a confirmation email shortly with your order details.</p>

        <div class="action-buttons">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
            <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary">View your books</a>
        </div>
    </div>
</div>