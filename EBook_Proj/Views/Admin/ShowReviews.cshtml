<div class="container mt-4">
    <!-- Back Button -->
    <div class="mb-3">
        <a asp-controller="Admin" asp-action="AdminPage" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Reviews Management</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Review ID</th>
                        <th scope="col">User ID</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.RevID</td>
                            <td>@review.UserID</td>
                            <td>
                                @for (int i = 0; i < review.Rate; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                @for (int i = review.Rate; i < 5; i++)
                                {
                                    <i class="bi bi-star text-muted"></i>
                                }
                            </td>
                            <td>@review.Description</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-danger" title="Delete"
                                        onclick="deleteReview(@review.RevID)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">

    <script>
        // Delete review handler
        function deleteReview(reviewId) {
            if (confirm('Are you sure you want to delete this review?')) {
                $.ajax({
                    url: '/Admin/DeleteReview',
                    type: 'POST',
                    data: { RevID: reviewId },
                    success: function(response) {
                        if (response.success) {
                            window.location.reload();
                        } else {
                            alert('Error deleting review. Please try again.');
                        }
                    },
                    error: function(error) {
                        console.error('Error deleting review:', error);
                        alert('Error deleting review. Please try again.');
                    }
                });
            }
        }
    </script>
}