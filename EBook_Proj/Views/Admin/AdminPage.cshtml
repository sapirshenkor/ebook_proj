<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">Admin Dashboard</h2>
            <hr>
        </div>
    </div>

    <div class="row g-4">
        <!-- Users Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people-fill text-primary"></i>
                        Users Management
                    </h5>
                    <p class="card-text">View and manage all registered users.</p>
                    <a asp-controller="Admin" asp-action="ShowUsers" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Manage Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Orders Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-cart-fill text-success"></i>
                        Orders
                    </h5>
                    <p class="card-text">Track and manage orders, view order history, and handle customer purchases.</p>
                    <a href="@Url.Action("Orders", "Admin")" class="btn btn-success">
                        <i class="bi bi-arrow-right"></i> View Orders
                    </a>
                </div>
            </div>
        </div>

        <!-- Books Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-book-fill text-info"></i>
                        Products
                    </h5>
                    <p class="card-text">Add, edit, or remove Books from your inventory. Manage book details and pricing.</p>
                    <a asp-controller="Admin" asp-action="ShowBooks" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Manage Books
                    </a>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-graph-up text-warning"></i>
                        Statistics
                    </h5>
                    <p class="card-text">View site statistics, user analytics, and sales reports.</p>
                    <a href="@Url.Action("Statistics", "Admin")" class="btn btn-warning">
                        <i class="bi bi-arrow-right"></i> View Statistics
                    </a>
                </div>
            </div>
        </div>

        <!-- Reviews Management Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-star-fill text-danger"></i>
                        Reviews
                    </h5>
                    <p class="card-text">Manage product reviews and ratings. Monitor customer feedback.</p>
                    <a href="@Url.Action("Reviews", "Admin")" class="btn btn-danger">
                        <i class="bi bi-arrow-right"></i> Manage Reviews
                    </a>
                </div>
            </div>
        </div>

        <!-- Settings Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-gear-fill text-secondary"></i>
                        Settings
                    </h5>
                    <p class="card-text">Configure system settings, email templates, and site parameters.</p>
                    <a href="@Url.Action("Settings", "Admin")" class="btn btn-secondary">
                        <i class="bi bi-arrow-right"></i> Site Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Section -->
    <div class="row mt-5">
        <div class="col">
            <h3 class="mb-4">Quick Statistics</h3>
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="bg-primary text-white p-3 rounded shadow-sm">
                        <h6>Total Users</h6>
                        <h3>@ViewBag.TotalUsers</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-success text-white p-3 rounded shadow-sm">
                        <h6>Total Orders</h6>
                        <h3>@ViewBag.TotalOrders</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-info text-white p-3 rounded shadow-sm">
                        <h6>Total Products</h6>
                        <h3>@ViewBag.TotalProducts</h3>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-warning text-white p-3 rounded shadow-sm">
                        <h6>Total Reviews</h6>
                        <h3>@ViewBag.TotalReviews</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>