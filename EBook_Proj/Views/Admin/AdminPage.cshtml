<div class="container-fluid p-4">
    <div class="row g-4">
        <!-- Users Section -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-primary p-3">
                            <i class="bi bi-people-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Users</h5>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body d-flex align-items-center">
                            <div>
                                <h6 class="text-muted small mb-1">Total Users</h6>
                                <h3 class="mb-0">@ViewBag.TotalUsers</h3>
                            </div>
                        </div>
                    </div>

                    <p class="card-text text-muted mb-4">View and manage all registered users.</p>
                    <a asp-controller="Admin" asp-action="ShowUsers" class="btn btn-primary d-block">
                        Manage Users <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-success p-3">
                            <i class="bi bi-cart-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Orders</h5>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body d-flex align-items-center">
                            <div>
                                <h6 class="text-muted small mb-1">Total Orders</h6>
                                <h3 class="mb-0">@ViewBag.TotalOrders</h3>
                            </div>
                        </div>
                    </div>

                    <p class="card-text text-muted mb-4">Track and manage customer orders.</p>
                    <a asp-controller="Admin" asp-action="ShowOrders" class="btn btn-success d-block">
                        View Orders <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Books Section -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-info p-3">
                            <i class="bi bi-book-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Books</h5>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body d-flex align-items-center">
                            <div>
                                <h6 class="text-muted small mb-1">Total Books</h6>
                                <h3 class="mb-0">@ViewBag.TotalProducts</h3>
                            </div>
                        </div>
                    </div>

                    <p class="card-text text-muted mb-4">Manage your book inventory.</p>
                    <a asp-controller="Admin" asp-action="ShowBooks" class="btn btn-info text-white d-block">
                        Manage Books <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-danger p-3">
                            <i class="bi bi-star-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Reviews</h5>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body d-flex align-items-center">
                            <div>
                                <h6 class="text-muted small mb-1">Total Reviews</h6>
                                <h3 class="mb-0">@ViewBag.TotalReviews</h3>
                            </div>
                        </div>
                    </div>

                    <p class="card-text text-muted mb-4">Monitor customer feedback.</p>
                    <a asp-controller="Admin" asp-action="ShowReviews" class="btn btn-danger d-block">
                        Manage Reviews <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>