<div class="container-fluid p-4">
    <!-- Revenue Overview -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h4 class="card-title">Revenue Overview</h4>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="border-end border-white pe-3">
                                <h6 class="text-white-50">Total Revenue</h6>
                                <h3>$@((ViewBag.BorrowRevenue + ViewBag.BuyRevenue).ToString("N2"))</h3>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-end border-white px-3">
                                <h6 class="text-white-50">Book Sales Revenue</h6>
                                <h3>$@(ViewBag.BuyRevenue.ToString("N2"))</h3>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="ps-3">
                                <h6 class="text-white-50">Borrowing Revenue</h6>
                                <h3>$@(ViewBag.BorrowRevenue.ToString("N2"))</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Users Section -->
        <div class="col-md-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-primary p-3">
                            <i class="bi bi-people-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Users</h5>
                    </div>
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="text-muted small mb-1">Total Registered Users</h6>
                            <h3 class="mb-0">@ViewBag.TotalUsers</h3>
                        </div>
                    </div>
                    <a asp-controller="Admin" asp-action="ShowUsers" class="btn btn-primary d-block">
                        Manage Users <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Orders Section -->
        <div class="col-md-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-success p-3">
                            <i class="bi bi-cart-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Orders</h5>
                    </div>
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="text-muted small mb-1">Total Orders</h6>
                            <h3 class="mb-0">@ViewBag.TotalOrders</h3>
                        </div>
                    </div>
                    <a asp-controller="Admin" asp-action="ShowOrders" class="btn btn-success d-block">
                        View Orders <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Books Section -->
        <div class="col-md-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-info p-3">
                            <i class="bi bi-book-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Books</h5>
                    </div>
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="text-muted small mb-1">Total Books</h6>
                            <h3 class="mb-0">@ViewBag.TotalProducts</h3>
                            <small class="text-muted">@ViewBag.ActiveDiscounts active discounts</small>
                        </div>
                    </div>
                    <a asp-controller="Admin" asp-action="ShowBooks" class="btn btn-info text-white d-block">
                        Manage Books <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="col-md-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="badge rounded-pill bg-danger p-3">
                            <i class="bi bi-star-fill fs-4"></i>
                        </span>
                        <h5 class="card-title ms-3 mb-0">Reviews</h5>
                    </div>
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="text-muted small mb-1">Total Reviews</h6>
                            <h3 class="mb-0">@ViewBag.TotalReviews</h3>
                        </div>
                    </div>
                    <a asp-controller="Admin" asp-action="ShowReviews" class="btn btn-danger d-block">
                        Manage Reviews <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer ID</th>
                                <th>Amount</th>
                                <th>Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var order in ViewBag.RecentOrders)
                            {
                                <tr>
                                    <td>@order.OrderID</td>
                                    <td>@order.CustomerID</td>
                                    <td>$@order.TotalAmount.ToString("N2")</td>
                                    <td>@order.PurchaseDate.ToString("MM/dd/yyyy HH:mm")</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>