@model List<Orders>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Orders Management</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer ID</th>
                    <th>Purchase Date</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.CustomerID</td>
                        <td>@order.PurchaseDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>$@order.TotalAmount.ToString("F2")</td>
                        <td>
                            <button type="button" class="btn btn-primary btn-sm"
                                    data-bs-toggle="modal"
                                    data-bs-target="#orderDetails-@order.OrderID">
                                <i class="bi bi-eye"></i> View Details
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modals Container -->
@foreach (var order in Model)
{
    <div class="modal fade" id="orderDetails-@order.OrderID" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Order #@order.OrderID Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Book ID</th>
                            <th>Book Type</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <tr>
                                <td>@detail.BookID</td>
                                <td>@detail.BookType</td>
                                <td>$@detail.BookPrice.ToString("F2")</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}