@model LoginModel

<div class="container py-5">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <!-- You can add your logo here -->
                <h1 class="display-6 fw-bold text-primary">Welcome Back</h1>
                <p class="text-muted">Sign in to your account</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center h4 mb-4 fw-bold">Login</h2>

                    <form asp-action="Login">
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Email"
                                       class="form-control"
                                       placeholder="Enter your email"
                                       />
                                <label asp-for="Email" class="text-muted"></label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Password"
                                       class="form-control"
                                       type="password"
                                       placeholder="Enter your password"/>
                                <label asp-for="Password" class="text-muted"></label>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>
                        

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">
                                Sign In <i class="bi bi-box-arrow-in-right ms-2"></i>
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted small mb-2">
                                <a asp-action="ForgotPassword" asp-controller="User" class="text-decoration-none">Forgot your password?</a>
                            </p>
                            <p class="text-muted small mb-2">
                                Don't have an account?
                                <a asp-action="Create" asp-controller="User" class="text-decoration-none">Register here</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}