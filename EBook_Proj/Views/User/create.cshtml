@model UserModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="text-center mb-4">
                <!-- You can add your logo here -->
                <h1 class="display-6 fw-bold text-primary">Welcome</h1>
                <p class="text-muted">Join our community today</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center h4 mb-4 fw-bold">Create New Account</h2>

                    <form asp-action="Create">
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="FirstName" class="text-muted"></label>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="LastName" class="text-muted"></label>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email" class="text-muted"></label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                                <label asp-for="Password" class="text-muted"></label>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button asp-action="Create" asp-controller="User" type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">
                                Create Account <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted small">
                                Already have an account?
                                <a asp-action="Login" asp-controller="User" class="text-decoration-none">Sign in</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small mb-0">
                    By creating an account, you agree to our
                    <a href="#" class="text-decoration-none">Terms</a> &
                    <a href="#" class="text-decoration-none">Privacy Policy</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- Add Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}