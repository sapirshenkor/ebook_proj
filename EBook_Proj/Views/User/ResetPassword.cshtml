@model ResetPasswordViewModel

<div class="container py-5">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center h4 mb-4 fw-bold">Reset Password</h2>

                    <form asp-action="ResetPassword" method="post">
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <label asp-for="Email"></label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="TemporaryPassword" class="form-control" placeholder="Temporary password" />
                                <label asp-for="TemporaryPassword"></label>
                                <span asp-validation-for="TemporaryPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="NewPassword" class="form-control" placeholder="New password" />
                                <label asp-for="NewPassword"></label>
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm password" />
                                <label asp-for="ConfirmNewPassword"></label>
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none small">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
